<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/submarines_background1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/boardsPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15pt"
        android:layout_marginTop="10pt"
        android:orientation="horizontal">

    </LinearLayout>

    <GridLayout
        android:id="@+id/boardGameButtons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15pt"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="10pt"
        android:columnCount="3"
        android:gravity="center_horizontal"
        android:rowCount="1">

        <ImageButton
            android:id="@+id/startGameButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/check_mark1"></ImageButton>

        <ImageButton
            android:id="@+id/startStopMusicButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/music_button_2"></ImageButton>

        <ImageButton
            android:id="@+id/setupButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/submarines_setup2"></ImageButton>
    </GridLayout>

</RelativeLayout>
